<%- include('../partials/' + elems.forms[0]) -%>

<div class="table-responseive-sm">
<table class='table table-striped table-hover table-sm'>
    <caption><h4>USERS</h4></caption>
    <thead class="thead-dark" >
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Name</th>
            <th scope="col" class="text-center">E-Mail:</th>
            <th scope="col" class="text-center">Age</thcsope="col">
            <th scope="col" class="text-center">role</th>
            <th scope="col" colspan = '2' class="text-center">photo</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(item => { %>    
        <tr id = <%= item.id %> >
            <th scope="row"><%= item.id %></th>
            <td><%= item.name %></td>
            <td><%= item.email %></td>
            <td><%= item.age %></td>
            <td><%= item.role %></td>
            <td><img src = <%= "images/" + item.photo %> alt ="no foto" ></td>
            <td><img src = <%= (item.photoB === 'null.png') ? "images/null.png" : 'data:image;base64,' + item.photoB %> class="rounded-circle" alt = "no photo" ></td>
            <td class="text-right"><img src = 'images/delete.ico' class = 'del' alt = 'delete'></td>
        </tr>
        <% }); %>
    </tbody>
</table>
</div>